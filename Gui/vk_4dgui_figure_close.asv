function vk_4dgui_figure_close(h, event, varargin)    
    hObject = findobj('Name', 'vk_4dgui');
    handles = guidata(hObject);
    
    if (isfield(handles, 'current_figure') && handles.current_figure == h)
        handles = rmfield(handles, 'current_figure');
    end
    
    guidata(hObject, handles);
    delete(h);
end